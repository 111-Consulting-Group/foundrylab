{
  "expo": {
    "name": "Foundry Lab",
    "slug": "foundry-lab",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "foundry-lab",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E1116"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foundrylab.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Foundry Lab uses your microphone for voice commands during workouts",
        "NSSpeechRecognitionUsageDescription": "Foundry Lab uses speech recognition to understand your voice commands"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0E1116"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.foundrylab.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Foundry Lab uses your microphone for voice commands during workouts",
          "speechRecognitionPermission": "Foundry Lab uses speech recognition to understand your voice commands"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
